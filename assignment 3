import java.util.Scanner;

public class ArraysAssignment {

public static void main(String[] args) {
Scanner sc = new Scanner(System.in);

// Problem 1: Search for an Element
System.out.println(â€œ Search for an Element");
System.out.print("Enter size of array: ");
int n1 = sc.nextInt();
int[] arr1 = new int[n1];

System.out.print("Enter array elements: ");
for(int i = 0; i < n1; i++) {
arr1[i] = sc.nextInt();
}

System.out.print("Enter element to search: ");
int x = sc.nextInt();

int index = -1;
for(int i = 0; i < n1; i++) {
if(arr1[i] == x) {
index = i;
break;
}
}

if(index != -1) {
System.out.println(index);
} else {
System.out.println("Not found");
}

System.out.println();

// Problem 2: Duplicate Elements
System.out.println("Duplicate Elements");
System.out.print("Enter number of elements: ");
int n2 = sc.nextInt();
int[] arr2 = new int[n2];

System.out.print("Enter array elements: ");
for(int i = 0; i < n2; i++) {
arr2[i] = sc.nextInt();
}

boolean[] printed = new boolean[n2];
boolean hasDuplicate = false;

System.out.print("Duplicate elements: ");
for(int i = 0; i < n2; i++) {
if(!printed[i]) {
int count = 0;
for(int j = 0; j < n2; j++) {
if(arr2[i] == arr2[j]) {
count++;

}
}
if(count > 1) {
System.out.print(arr2[i] + " ");
hasDuplicate = true;
for(int k = 0; k < n2; k++) {
if(arr2[k] == arr2[i]) {
printed[k] = true;
}
}
}
}
}

if(!hasDuplicate) {
System.out.print("No duplicates");
}
System.out.println();

System.out.println();

// Problem 3: Left Rotation by K Positions
System.out.println("Left Rotation by K Positions");
System.out.print("Enter size of array: ");
int n3 = sc.nextInt();
int[] arr3 = new int[n3];

System.out.print("Enter array elements: ");
for(int i = 0; i < n3; i++) {

arr3[i] = sc.nextInt();
}

System.out.print("Enter number of positions to rotate left: ");
int k = sc.nextInt();

k = k % n3;

int[] rotated = new int[n3];
for(int i = 0; i < n3; i++) {
rotated[i] = arr3[(i + k) % n3];
}

System.out.print("Rotated array: ");
for(int i = 0; i < n3; i++) {
System.out.print(rotated[i] + " ");
}
System.out.println();
}
}

